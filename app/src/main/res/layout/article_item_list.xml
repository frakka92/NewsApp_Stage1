<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_attraction_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_title"
            android:paddingLeft="@dimen/padding_left_title"
            android:paddingEnd="@dimen/padding_end_title"
            android:paddingRight="@dimen/padding_right_title"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            tools:text="@string/title" />

        <TextView
            android:id="@+id/article_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_address"
            android:paddingLeft="@dimen/padding_left_address"
            android:paddingEnd="@dimen/padding_end_address"
            android:paddingRight="@dimen/padding_right_address"
            android:textColor="@color/black"
            android:textSize="@dimen/address_size"
            tools:text="@string/section" />

        <TextView
            android:id="@+id/article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_address"
            android:paddingLeft="@dimen/padding_left_address"
            android:paddingEnd="@dimen/padding_end_address"
            android:paddingRight="@dimen/padding_right_address"
            android:textColor="@color/black"
            android:textSize="@dimen/address_size"
            tools:text="@string/date" />
    </LinearLayout>
</RelativeLayout>